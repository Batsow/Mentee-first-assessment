import unittest
from validate_password import validate_password,password_strength

class TestValidatePassword(unittest.TestCase):
    def test_validate_password(self):
        result = validate_password("VRtab123#R")
        self.assertEqual(result, True)

    def test_short_password(self):
        result = validate_password("WT2!a")
        self.assertEqual(result, False)

    def test_no_lower_case(self):
        result = validate_password("VCRY63@@$^)HF")
        self.assertEqual(result,False)

    def test_no_upper_case(self):
        result = validate_password("gshwuh22ry2135!135*")
        self.assertEqual(result, False)

    def test_no_digit(self):
        result = validate_password("GFEnhsdj$#!")
        self.assertEqual(result, False)

    def test_no_special_character(self):
        result = validate_password("DSEihwb6264")
        self.assertEqual(result, False)

    def test_no_user_input(self):
        with self.assertRaises(TypeError):
            validate_password()

    def test_wrong_input_type(self):
        with self.assertRaises(TypeError):
            validate_password(15)


    #strength
    def test_password_strength(self):
        result = password_strength("VRtab123#R")
        self.assertEqual(result, "Strong")

    def test_moderate_password(self):
        result = password_strength("VCRY63@@$^)HF")
        self.assertEqual(result, "Moderate")

    def test_weak_password(self):
        result = password_strength("WT2!a")
        self.assertEqual(result, "Weak")

        
if __name__ == "__main__":
    unittest.main()

        

    